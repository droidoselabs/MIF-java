<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/spacing_tiny"
    app:cardElevation="@dimen/spacing_tiny"
    app:contentPadding="@dimen/spacing_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/background_round_white"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etName"
                style="@style/CustomMaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                app:met_iconLeft="@drawable/ic_name" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etEmail"
                style="@style/CustomMaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                app:met_iconLeft="@android:drawable/ic_dialog_email" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etPassword"
                style="@style/CustomMaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                app:met_iconLeft="@drawable/password" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etConfirmPassword"
                style="@style/CustomMaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                app:met_iconLeft="@drawable/password" />

            <android.support.v7.widget.AppCompatButton
                style="@style/PrimaryButton"
                android:background="@drawable/round_blue_button"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:text="@string/keep_going" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>