<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/spacing_tiny"
        app:cardElevation="@dimen/spacing_tiny">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_size"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_medium">

            <ImageView
                android:id="@+id/ivBodyOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/boy_one"/>

            <ImageView
                android:id="@+id/ivBodyTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/boy_two"/>

            <ImageView
                android:id="@+id/ivBodyThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/boy_three"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvBodyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/card"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/ectomorph"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large"
        android:textStyle="bold" />
</RelativeLayout>
